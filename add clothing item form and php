<?php
session_start();
$mysql = new mysqli("localhost","root","","ecommerce");
    $date= date('Y-m-d H:i:s');
    $item =  $_REQUEST['item'];
    $desc = $_REQUEST['desc'];
    $subcategory =  $_REQUEST['subcategory1'];
    $price = $_REQUEST['price'];
    $qty = $_REQUEST['qty'];
    $addedby=$_SESSION['USERID'];
    $filename=$_FILES["image"]["name"];
    $tempname=$_FILES["image"]["tmp_name"];
    $folder= "./image/" .$filename;
    if(move_uploaded_file($tempname, $folder))
    {
        
    }
    else
    {
        
    }

    $sql = "INSERT INTO tbl_product (product_name, product_desc, product_image, unit_price, qty, subcategory_id, created_at, added_by)
     VALUES ('$item','$desc','$filename','$price','$qty','$subcategory','$date','$addedby')";
        
        if(mysqli_query($mysql, $sql))
        {
            echo '<script>
        alert("Successfully added a clothing item.");
        window.location="http://localhost/ecommerce/adminpanel-alt.php";
        </script>';
        }
        else
        {
            echo '<script>
        alert("Error in adding item. Please try again.");
        window.location="http://localhost/ecommerce/clothingitem.php";
        </script>';
         mysqli_error($mysql);
        }
         
        mysqli_close($mysql);
?>
