<?php
$mysql = new mysqli("localhost","root","","ecommerce");
$sql= "SELECT product_id, product_name, product_desc, product_image, unit_price, qty, subcategory_id FROM tbl_product";
$result= $mysql-> query ($sql);
$mysql ->close();
?>
<html>
<head>
	<link rel="stylesheet" href="userstyles.css">
	<meta charset ="UTF-8">
	<title> User Details </title>
</head>
<body>
	<section id="table">
		<h2>Product details table</h2>
	<table>
			<tr>
				<th>Product ID</th>
				<th>Product name</th>
				<th>Product description</th>
				<th>Product image</th>
				<th>Unit price</th>
				<th>Quantity</th>
				<th>Subcategory ID</th>
			</tr>
<?php
	while($rows=$result->fetch_assoc())
	{
?>	
	<tr>
		<td><?php echo $rows['product_id'];?></td>
		<td><?php echo $rows['product_name'];?></td>
		<td><?php echo $rows['product_desc'];?></td>
		<td>
			<img src= "./image/ <?php echo $rows['product_image']; ?>" >
		</td>
		<td><?php echo $rows['unit_price'];?></td>
		<td><?php echo $rows['qty'];?></td>
		<td><?php echo $rows['subcategory_id'];?></td>
		<td><button type="submit" class="editbtn" href="edit.php">Edit</td>
	</tr>
	<?php
	}
	?>
	</table>
	</section>
</body>
</html>
