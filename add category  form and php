<?php
$mysql = new mysqli("localhost","root","","ecommerce");

    $category =  $_REQUEST['category'];
    $desc = $_REQUEST['desc'];
    

    $sql = "INSERT INTO tbl_categories (category_name)
    VALUES ('$category')";
    if(mysqli_query($mysql, $sql))
    {
        echo '<script>
        alert("Successfully added a category.");
        window.location="http://localhost/ecommerce/adminpanel-alt.php";
        </script>';
    }
    else
    {
        echo '<script>
        alert("An error occurred. Please try again.");
        window.location="http://localhost/ecommerce/category.php";
        </script>';
        mysqli_error($mysql);
    }
         
    mysqli_close($mysql);
?>
