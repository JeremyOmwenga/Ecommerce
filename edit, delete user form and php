<?php

$mysql = new mysqli("localhost","root","","ecommerce");
    $userid=$_REQUEST['userid'];
    $email =  $_REQUEST['email'];
    $username = $_REQUEST['username'];
    $gender =  $_REQUEST['gender'];
    $password = $_REQUEST['password'];
    $user = $_REQUEST['user'];

    $sql = "UPDATE tbl_users SET email='$email', username='$username', gender='$gender', password='$password' , role='$user' WHERE user_id='$userid'";
        
        if(mysqli_query($mysql, $sql))
        {
            echo '<script>
        alert("Successfully edited user.");
        window.location="http://localhost/ecommerce/adminpanel-alt.php";
        </script>';
            
        }
         else
        {
            echo '<script>
        alert("Registration failed. Please try again.");
        window.location="http://localhost/ecommerce/adminpanel-alt.php";
        </script>';
        }
         
        mysqli_close($mysql);

?>
