<?php
include 'database.php';
session_start();
$id=$_GET['id'];
$del="DELETE FROM tbl_users WHERE user_id='$id'";
if(mysqli_query($conn, $del))
    {
        echo '<script>
        alert("Successfully deleted user.");
        window.location="http://localhost/ecommerce/adminpanel-alt.php";
        </script>';
    }
    else
    {
        echo '<script>
        alert("An error occurred. Please try again.");
        window.location="http://localhost/ecommerce/allusers.php";
        </script>';
        mysqli_error($mysql);
    }
?>
